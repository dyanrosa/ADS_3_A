<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#877ae5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#d2f1eeee"
            android:src="@drawable/ic_menu_black_24dp"
            android:layout_weight="1"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#fff"
            android:layout_weight="7"
            android:layout_marginHorizontal="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#d2f1eeee"
            android:src="@drawable/ic_search_black_24dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#e9a6a5a5">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#b6aeea"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Champion Futsal"
            android:textSize="40dp"
            android:gravity="center_horizontal"
            android:textColor="#fff"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:text="Suhat, Lowokwaru, Malang"
            android:gravity="center_horizontal"
            android:textSize="20dp"/>

    </LinearLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#8579e3">

                //List array Adapter

                <include layout="@layout/inc_lap_status"/>
                <include layout="@layout/inc_lap_status"/>
                <include layout="@layout/inc_lap_status"/>
                <include layout="@layout/inc_lap_status"/>

            </LinearLayout>

        </ScrollView>

</LinearLayout>