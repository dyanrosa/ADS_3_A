<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#3c747373"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="24 jam"
            android:textColor="#fff"
            android:textSize="@dimen/beranda_font_size_waktu" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Champion Futsal"
            android:textColor="#fff"
            android:textSize="@dimen/beranda_font_size_nama" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Suhat, Lowokwaru, Malang"
            android:textColor="#fff"
            android:textSize="@dimen/beranda_font_size_tempat" />

    </LinearLayout>

</LinearLayout>